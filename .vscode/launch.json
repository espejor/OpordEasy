    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "pwa-msedge",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "name": "Attach to Edge",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}"
        },
          {
            "name": "Attach to Chrome",
            "port": 9229,
            "request": "launch",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-chrome",
            "outFiles": ["${workspaceFolder}/bin/**/*.js"],
            "trace": true,
            "sourceMaps": true
          },
